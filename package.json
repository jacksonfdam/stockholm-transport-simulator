{
  "name": "stockholm-transport-simulator",
  "version": "1.0.0",
  "description": "An interactive Stockholm transport simulator with a real-time visual frontend.",
  "type": "module",
  "main": "presentation/server.js",
  "scripts": {
    "dev": "nodemon --watch presentation --watch application --watch domain --watch infrastructure --watch config --ext js,json,njk --exec \"node presentation/server.js\"",
    "start": "node presentation/server.js",
    "seed": "node scripts/seed-from-trafiklab.js --data ./",
    "seed:routes": "node scripts/seed-routes-to-lines.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "geolib": "^3.3.4",
    "merge-deep": "^3.0.3",
    "bootstrap": "^5.3.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nunjucks": "^3.2.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  }
}